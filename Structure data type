#include <stdio.h>
struct average
{
    float value;
};
int main()
{
    int i,n;
    printf ("Enter number limit: ");
    scanf ("%d",&n);
    struct average av[n];
    float avg,sum=0;
    printf ("Enter %d numbers: ",n);
    for (i=0; i<n; i++)
    {
        scanf ("%f",&av[i].value);
        sum+=av[i].value;
    }
    avg= sum/n;
    printf ("The average of three numbers is: %.2f\n",avg);
    return 0;
}
